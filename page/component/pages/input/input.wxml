<view class="weui-cells__title">设置文本颜色</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">
      <input cursor-spacing="50" style="color:{{textColor}}" bindblur="onBlur" bindfocus="onFocus" class="weui-input" value="单击颜色按钮" />
    </view>
  </view>
  <view class="weui-flex spacing" style="position:absolute;width:100%;display:{{inputPanelExtVisible ? 'block' : 'none'}}">
    <view class="weui-flex__item">
      <button bindtap="onTapColor" class="weui-btn mini-btn" type="warn" size="mini">颜色</button>
    </view>
  </view>
</view>
