<view class="spacing">
  <view class="weui-cells__title">图标大小</view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <icon wx:for="{{iconSize}}" type="success" size="{{item}}" />
    </view>
  </view>

  <view class="weui-cells__title">图标颜色</view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <icon wx:for="{{iconColors}}" type="success" size="20" color="{{item}}" />
    </view>
  </view>

  <view class="weui-cells__title">官方图标</view>
  <view class="weui-flex">
    <view class="weui-flex__item">
      <icon wx:for="{{iconTypes1}}" type="{{item}}" size="20" />
    </view>
  </view>

  <view class="weui-cells__title">组合图标测试（共12个有效图标）</view>
<view class="weui-cells weui-cells_after-title">
  <view wx:for="{{iconTypes2}}" class="weui-cell">
    <view class="weui-cell__hd" style="width:60rpx">
      <icon type="{{item}}" size="20" />
    </view>
    <view class="weui-cell__bd">{{item}}</view>
  </view>
</view>

</view>